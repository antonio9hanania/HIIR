        <StackLayout >
            <Frame Padding="0,0,4,4" Margin="5,5,5,0"  CornerRadius="2">
                <Frame.BackgroundColor>
                    <Color x:FactoryMethod="FromRgba">
                        <x:Arguments>
                            <x:Double>1</x:Double>
                            <x:Double>1</x:Double>
                            <x:Double>1</x:Double>
                            <x:Double>0.5</x:Double>
                        </x:Arguments>
                    </Color>
                </Frame.BackgroundColor>

                <Frame 
       HasShadow="True"
       BorderColor="Black" >
                    <Frame.Background>
                        <RadialGradientBrush Center="0.1,0.1"
                             Radius="0.5">
                            <GradientStop Color="Black"
                          Offset="0.1"/>
                            <GradientStop Color="DimGray"
                          Offset="1.0"/>
                        </RadialGradientBrush>
                    </Frame.Background>
                    <StackLayout  Orientation="Horizontal" VerticalOptions="Start" HorizontalOptions="FillAndExpand">
                        <Label Text="Walking Duration"
                               TextColor="White" 
                               FontSize="25"  HorizontalTextAlignment="Start" VerticalOptions="Center" HorizontalOptions="StartAndExpand"/>
                        <Image Source="ic_action_expand.png" Aspect="AspectFit" />
                    </StackLayout>
                </Frame>
            </Frame>
        </StackLayout>

        <StackLayout >
            <Frame Padding="0.1,0.1,4,4" Margin="5,5,5,0" BorderColor="WhiteSmoke" CornerRadius="10">
                <Frame.BackgroundColor>
                    <Color x:FactoryMethod="FromRgba">
